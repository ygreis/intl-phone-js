{
  "compilerOptions": {
    /* =========================
       Target & Module
    ========================== */
    "target": "ES2018",
    "module": "ESNext",
    "lib": ["DOM", "ES2018"],
    "moduleResolution": "Node",

    /* =========================
       Paths & Types
    ========================== */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vitest/globals"],

    /* =========================
       Output
    ========================== */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": false,

    /* =========================
       Strictness
    ========================== */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,

    /* =========================
       Interop
    ========================== */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* =========================
       Quality of life
    ========================== */
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,

    /* =========================
       Build Behavior
    ========================== */
    "noEmit": false
  },

  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist", "playground"]
}
