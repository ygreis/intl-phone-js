{
  "compilerOptions": {
    "target": "es5",
    "module": "ES6",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "moduleResolution": "node",
    "lib": ["DOM", "ES2015"],

    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,

    "types": []
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}